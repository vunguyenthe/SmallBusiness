<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
  <changeSet id="21" author="hr4">
   <preConditions onFail="MARK_RAN">
        <not>
            <tableExists tableName="role"/>
        </not>
    </preConditions>
    <createTable tableName="role">
      <column name="id" type="int" autoIncrement = "true"><constraints primaryKey="true" nullable="false"/></column> 
      <column name="roleId" type="int"/>
      <column name="name" type="varchar(50)"/>
    </createTable>
	<insert tableName="role">
	        <column name="roleId" valueComputed="1"/>
	        <column name="name" valueComputed="'Admin'"/>
	 </insert>
	 <insert tableName="role">
	        <column name="roleId" valueComputed="2"/>
	        <column name="name" valueComputed="'User'"/>
	    </insert>  
	 <insert tableName="role">
	        <column name="roleId" valueComputed="3"/>
	        <column name="name" valueComputed="'Guest'"/>
	 </insert>          
  </changeSet>
  <changeSet id="22" author="hr4">
   <preConditions onFail="MARK_RAN">
        <not>
            <tableExists tableName="consultant"/>
        </not>
    </preConditions>
    <createTable tableName="consultant">
      <column name="id" type="int" autoIncrement = "true"><constraints primaryKey="true" nullable="false"/></column> 
      <column name="consultantId" type="varchar(50)"/>
      <column name="name" type="varchar(50)"/>
    </createTable>
    <insert tableName="consultant">
        <column name="consultantId" valueComputed="1"/>
        <column name="name" valueComputed="'Alex'"/>
    </insert>
   <insert tableName="consultant">
        <column name="consultantId" valueComputed="2"/>
        <column name="name" valueComputed="'Samy'"/>
    </insert>  
   <insert tableName="consultant">
        <column name="consultantId" valueComputed="3"/>
        <column name="name" valueComputed="'Vu-San'"/>
    </insert>      
  </changeSet>
</databaseChangeLog>
