<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
  <changeSet id="1" author="hr4">
   <preConditions onFail="MARK_RAN">
        <not>
            <tableExists tableName="targetcompany"/>
        </not>
    </preConditions>
    <createTable tableName="targetcompany">
      <column name="id" type="int" autoIncrement = "true"><constraints primaryKey="true" nullable="false"/></column> 
      <column name="companyId" type="int"/>
      <column name="assignmentId" type="int"/>
      <column name="progressStatusId" type="varchar(50)"/>
 	  <column name="progressNote" type="varchar(255)"/>   
 	  <column name="owner" type="varchar(255)"/>  
    </createTable>
  </changeSet>
  <changeSet id="2" author="hr4">
   <preConditions onFail="MARK_RAN">
        <not>
            <tableExists tableName="progressstatus"/>
        </not>
    </preConditions>
    <createTable tableName="progressstatus">
      <column name="id" type="int" autoIncrement = "true"><constraints primaryKey="true" nullable="false"/></column> 
      <column name="progressStatus" type="varchar(50)"/>
    </createTable>
     <insert tableName="progressstatus">
        <column name="id" valueComputed="1"/>
        <column name="progressStatus" valueComputed="'Status 1'"/>
    </insert>
   <insert tableName="progressstatus">
        <column name="id" valueComputed="2"/>
        <column name="progressStatus" valueComputed="'Status 2'"/>
    </insert>  
   <insert tableName="progressstatus">
        <column name="id" valueComputed="3"/>
        <column name="progressStatus" valueComputed="'Status 3'"/>
    </insert>      
  </changeSet>
</databaseChangeLog>
